<%= link_to "countries index", "/countries" %>
<%= link_to "cities index", "/cities" %>


<h1>All cities</h1>


<% @cities.each do |city| %>
  <h3><%=  city.name %></h3>
  <%= link_to "Update #{city.name}", "/cities/#{city.id}/edit" %>
  <%= link_to 'Delete', "/cities/#{city.id}", method: :delete %>
  <p> <%= " #{city.population}, #{city.capital}, #{city.country_id}" %> </p>

<% end %>
